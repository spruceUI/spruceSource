# Use Debian slim as base
FROM debian:bookworm-slim

# Install build tools and ARM32 cross-compiler
RUN apt-get update && apt-get install -y \
    build-essential \
    gcc-arm-linux-gnueabihf \
    libc6-dev-armhf-cross \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /src

# Copy your C source
COPY ra_network_command.c .

# Compile static ARM32 binary
RUN arm-linux-gnueabihf-gcc -O2 -static -o ra_network_command ra_network_command.c

# Default command to list the compiled binary
CMD ["ls", "-lh", "ra_network_command"]
